<section class="card card-rounded">

  <div class="card-header">
    <a href="/dashboard/postDetail/{{post_id}}">
      <h4>{{post_title}}</h4>Posted By:
      {{user.user_name}}
      On:
      {{posted_date}}
    </a>
      {{!-- <h4>{{post_title}}</h4>Posted By:
      {{user.user_name}}
      On:
      {{posted_date}} --}}
  </div>

  <div class="card-body">
    <p>{{post_body}}</p>
  </div>
  {{#if comments}}
    <div class="card-header">
      <h6>Post comments</h6>
    </div>
    {{#each comments}}
       <div class="card-body" id="comment">
        {{comment_body}}
        <div id="commenter">
        Comment Posted By:
        {{user.[comments.commentPosted_by].user_name}}
        </div>
      </div>
    {{/each}}
  {{/if}}
</section>